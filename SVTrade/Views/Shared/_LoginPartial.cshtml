@{
    if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Привіт " + (Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest"), "Index", "Home", new { area = "" }, new { @class = "navbar-brand page-scroll" })</li>
                <li> <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a> </li>
            </ul>

        }
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Привіт " + (Request.IsAuthenticated ? HttpContext.Current.User.Identity.Name : "Guest"), "About", "Home",new { area="" }, new { @class = "navbar-brand page-scroll" })</li>
            <li> @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "navbar-brand page-scroll" }) </li>
        </ul>

    }
}


