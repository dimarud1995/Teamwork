@model SVTrade.Models.User

@{
    ViewBag.Title = "SVTrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container maincont">
    @Html.Partial("HowItWork")
    <div class="tab-container">
        <div class="tab-details">
            <ul class="nav nav-tabs new" id="myTab">
                <li class="active">
                    <a href="~/Personal/Users/Index">Профіль</a>
                </li>
                <li>
                    <a href="~/Personal/Orders/Index">Замовлення</a>
                </li>
                <li>
                    <a href="~/Personal/ProductToBuys/Index">Передзамовлення</a>
                </li>
                <li>
                    <a href="~/Personal/Products/Index">Ваші товари</a>
                </li>
                <li>
                    <a href="~/Personal/Statistic/Index">Статистика продаж</a>
                </li>
                <li>
                    <a href="~/Personal/Wish/Index">Побажання</a>
                </li>
            </ul>
        </div>
        <div class="tab-content" id="myTabCont">
            <div class="tab-pane active" id="received">
                <div class="messages-container clearfix">
                    <ol class="unstyled received-thread">
                        Тут Ви можете переглянути дані вашого профілю, а також редагувати.Щоб зберегти зміни, натисніть "Зберегти".
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="col-lg-3">
            <div class="col-lg-12 myDiv floatDiv">
                <ul class="nav  nav-stacked supermenuleft">
                    <li class="profile-header-menu">Інформація профілю</li>
                    <li>
                        <a href="#">Персональні дані</a>
                    </li>
                    <li>
                        <a href="#">Фото профілю</a>
                    </li>
                    <li>
                        <a href="#">Мої уподобання</a>
                    </li>
                    <li>
                        <a href="#">Пароль</a>
                    </li>
                    <li>
                        <a href="#">Сповіщення</a>
                    </li>
                    <li>
                        <a href="~/Personal/Users/Delete">Деактивувати акаунт</a>
                    </li>
                </ul>
            </div>
            <div class="col-lg-12 myDiv">
                <ul class="nav  nav-stacked supermenuleft">
                    <li class="profile-header-menu">Верифікація</li>
                    <li>
                        <div class="infoli">Торгова ліцензія:</div>
                        <div class="infochek"> @Html.DisplayFor(model => model.tradeLicense)</div>
                    </li>
                    <li>
                        <div class="infoli">  Ліцензія:</div>
                        <div class="infochek"> @Html.DisplayFor(model => model.merchantLicense)</div>
                    </li>
                    <li>
                        <div class="infoli">  Підтверджено: </div>
                        <div class="infochek">@Html.DisplayFor(model => model.approved)</div>
                    </li>

                </ul>
            </div>
        </div>
        <div class="col-lg-8 myDiv ">

            <div >
                <h3>Мої персональні дані</h3>
                <hr />
                <form action="~/Personal/Users/Edit" method="post" enctype="multipart/form-data">

                    @Html.AntiForgeryToken()
                    <div class="form-horizontal col-lg-11">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.userID)


                        <div class="form-group">
                            @Html.LabelFor(model => model.companyName, "Компанія", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.companyName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.companyName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.juridicalAddress, "Юридична адреса", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.juridicalAddress, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.juridicalAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.address, "Фізична адреса", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.contactPerson, "Контактне лице", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.contactPerson, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.contactPerson, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.post, "Потшова адреса", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.post, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.post, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.phoneNumber, "Тел.", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.phoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.phoneNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Зберегти" class="btn butstyle" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    </div>