@model SVTrade.Models.Product

@{
    ViewBag.Title = "Деталі";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="allpage">
    <div class="absolutecontainer">
        <div class="col-lg-2 leftmenu">
            <p>@Html.ActionLink("Додати товар", "Create")</p>
            <p>@Html.ActionLink("Ваш склад", "Index")</p>
            <p>@Html.ActionLink("Статистика", "Statistic")</p>
        </div>
        <div class="col-lg-9 rightmenu">
            <h2>Деталі</h2>

            <div>
                <h4>Товар</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Назва
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.name)
                    </dd>

                    <dt>
                        Картинка
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.imageURL)
                    </dd>

                    <dt>
                        Кількість
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.amount)
                    </dd>

                    <dt>
                        Ціна
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.price)
                    </dd>

                    <dt>
                        Опис
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.description)
                    </dd>

                    <dt>
                        Категорія
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ProductCategory.name)
                    </dd>

                    <dt>
                        Власник
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.companyName)
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Редагувати", "Edit", new { id = Model.productID }) |
                @Html.ActionLink("Повернутись", "Index")
            </p>
        </div>
    </div>
</div>