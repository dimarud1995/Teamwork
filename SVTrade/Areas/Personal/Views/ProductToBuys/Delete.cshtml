@model SVTrade.Models.ProductToBuy

@{
    ViewBag.Title = "SVTrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container maincont">
    <h2>Видалення</h2>
    <h3>Ви впевнені, що хочете видалити передзамовлення?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Назва
            </dt>
            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>
            <dt>
                Кількість
            </dt>
            <dd>
                @Html.DisplayFor(model => model.amount)
            </dd>
            <dt>
                Ціна
            </dt>
            <dd>
                @Html.DisplayFor(model => model.price)
            </dd>
            <dt>
                Опис
            </dt>
            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>
            <dt>
                Підтверджено
            </dt>
            <dd>
                @Html.DisplayFor(model => model.approved)
            </dd>
            <dt>
                Категорія
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ProductCategory.name)
            </dd>
            <dt>
                Компанія
            </dt>
            <dd>
                @Html.DisplayFor(model => model.User.companyName)
            </dd>
        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Видалити" class="btn btn-default get butstyleDel" />
                @Html.ActionLink("Повернутись", "Index", new { id = Model.userID }, new { @class = "btn btn-default get butstyle" })
            </div>
        }
    </div>
    </div>