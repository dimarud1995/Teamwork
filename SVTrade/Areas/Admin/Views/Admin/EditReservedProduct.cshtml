@model SVTrade.Models.ReservedProduct

@{
    ViewBag.Title = "Адмін: змінити" + @Model.reservID;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Змінити @Model.reservID</h2>
@using (Html.BeginForm("EditReservedProduct", "Admin"))
{
    <div class="form-group">
        <div class="col-md-10">

           
            <div class="editor-field">
                @Html.EditorFor(x => x.reservID, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            
            <div class="editor-label">
                @Html.LabelFor(x => x.orderID, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="dropdown">
                @Html.DropDownListFor(m => m.orderID,
                    (IEnumerable<SelectListItem>)ViewData["AllOrders"], "choose", new { @class = "form-control" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(x => x.productID, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="dropdown">
                @Html.DropDownListFor(m => m.productID,
                    (IEnumerable<SelectListItem>)ViewData["AllProducts"], "choose", new { @class = "form-control" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(x => x.userID)
            </div>

            <div class="dropdown">
                @Html.DropDownListFor(m => m.userID,
                    (IEnumerable<SelectListItem>)ViewData["AllUsers"], "choose", new { @class = "form-control" })
            </div>

            <div class="editor-label">
                @Html.LabelFor(x => x.amountOfProduct)
            </div>
            <div class="editor-field">
                @Html.EditorFor(x => x.amountOfProduct, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="editor-label">
                @Html.LabelFor(x => x.date)
            </div>
            <div class="editor-field">
                @Html.EditorFor(x => x.date, new { htmlAttributes = new { @class = "form-control" } })
            </div>



            <div class="editor-label">
                <input type="submit" value="Зберегти" class="btn btn-default" />
            </div>
            <div class="editor-label">
                @Html.ActionLink("Відмінити і повернутись до списку", "ReservedProductsList")
            </div>
        </div>
    </div>

}