@model IEnumerable<SVTrade.Models.Product>

    @{
        ViewBag.Title = "Адмін: непідтверджені товари";
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    }

    <h2>Непідтверджені товари</h2>

    <table class="table table-bordered">
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.title)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.productCategoryID)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.imageURL)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.amount)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.price)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.description)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.userID)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.approved)
            </td>



            <td></td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.title)</td>
                <td>@Html.DisplayFor(model => item.ProductCategory.name)</td>
                <td>@Html.DisplayFor(model => item.imageURL)</td>
                <td>@Html.DisplayFor(model => item.amount)</td>
                <td>@Html.DisplayFor(model => item.price)</td>
                <td>@Html.DisplayFor(model => item.description)</td>
                <td>@Html.DisplayFor(model => item.User.contactPerson)</td>
                <td>@Html.DisplayFor(model => item.approved)</td>

                <td>
                    @using (Html.BeginForm("DeleteProduct", "Admin"))
                    {
                        @Html.Hidden("productID", item.productID)
                        <div class="btn-group" role="group">
                            <input type="submit" value="Відхилити" class="btn btn-default" />
                        </div>
                    }
                    @Html.ActionLink("Змінити", "EditManagerProduct", "Admin", new { item.productID }, new { @class = "btn btn-default" })
                    <input type="submit" value="Підтвердити" class="btn disabled"/>
                    <input type="submit" value="СМС розсилка" class="btn disabled"/>
                    <input type="submit" value="Склад" class="btn disabled" />
                </td>
            </tr>
        }
    </table>


