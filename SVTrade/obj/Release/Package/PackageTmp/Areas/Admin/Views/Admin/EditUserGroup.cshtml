@model SVTrade.Models.UserGroup

@{
    ViewBag.Title = "Адмін: змінити" + Model.name;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-10">
    <div class="form-panel">
        <h2>Змінити @Model.name</h2>
        @using (Html.BeginForm("EditUserGroup", "Admin"))
        {
            <div class="form-group">
                
                    @Html.EditorForModel(new { htmlAttributes = new { @class = "form-control" } })
                    <div class="editor-label">
                        <input type="submit" value="Зберегти" class="btn btn-theme" />
                    </div>
                    <div class="editor-label mt">
                        @Html.ActionLink("Відмінити і повернутись до списку", "UserGroupsList")
                    </div>
                </div>           

        }

    </div>
</div>
