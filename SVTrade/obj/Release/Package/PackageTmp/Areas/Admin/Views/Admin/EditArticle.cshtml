@model SVTrade.Models.Article

@{
    ViewBag.Title = "Адмін: змінити " + @Model.title;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-10">
    <div class="form-panel">
        <h2>Змінити @Model.title</h2>

        @using (Html.BeginForm("EditArticle", "Admin"))
        {



            <div class="form-group">

                <div class="editor-field">
                    @Html.EditorFor(x => x.articleID, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(x => x.title)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(x => x.title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(x => x.title)
                    </div>
                </div>

                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(x => x.imageURL)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(x => x.imageURL, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(x => x.imageURL)
                    </div>
                </div>

                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(x => x.description)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(x => x.description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(x => x.description)
                    </div>

                </div>

                <div class="editor-label mt">
                    <input type="submit" value="Зберегти" class="btn btn-theme" />
                </div>
                <div class="editor-field mt">
                    @Html.ActionLink("Відмінити і повернутись до списку", "ArticlesList")
                </div>
            </div>



        }
    </div>
    </div>

