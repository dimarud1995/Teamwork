@model SVTrade.Models.Order

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container maincont">
    <div class="tab-container">
        <div class="tab-details">
            <ul class="nav nav-tabs new" id="myTab">
                <li>
                    <a href="~/Personal/Users/Index">Профіль</a>
                </li>
                <li class="active">
                    <a href="~/Personal/Orders/Index">Замовлення</a>
                </li>
                <li>
                    <a href="~/Personal/ProductToBuys/Index">Передзамовлення</a>
                </li>
                <li>
                    <a href="~/Personal/Products/Index">Ваші товари</a>
                </li>
                <li>
                    <a href="#">Статистика продаж</a>
                </li>
                <li>
                    <a href="#">Побажання</a>
                </li>
            </ul>
        </div>
        <div class="tab-content" id="myTabCont">
            <div class="tab-pane active" id="annonces">
                <ul class="nav nav-pills" id="ulMyTab">
                    <li>
                        <a href="~/Personal/Products/Index" rel="nofollow">
                            Список замовлень
                        </a>
                    </li>
                    <li>
                        <a href="~/MappingProducts/Mapping/Mapping" rel="nofollow">
                            Замовити товар
                        </a>
                    </li>
                    <li>
                        <a href="#" rel="nofollow">
                            Історія
                        </a>
                    </li>
                </ul>
            </div>
           
        </div>

    </div>
    <div >
        <h2>Видалення</h2>
        <h3>Ви впевнені, шо хочете видалити цей товар?</h3>
            <div>
              
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                       Дата замовлення
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.orderDate)
                    </dd>
                    <dt>
                       Дата закінчення строку
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.finishDate)
                    </dd>
                    <dt>
                       Кількість
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.amount)
                    </dd>
                    <dt>
                       Дата підтвердження статусу
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.statusDate)
                    </dd>
                    <dt>
                       Підтвердження
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.completed)
                    </dd>
                    <dt>
                       Статус замовлення
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.OrderStatus.name)
                    </dd>
                    <dt>
                        Продукт
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Product.title)
                    </dd>
                  
                </dl>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Видалити" class="butstyleDel" />
                        @Html.ActionLink("Повернутись", "Index", new { id = Model.userID }, new { @class = "butstyle" })
 </div>
                }
            </div>
        </div>
    </div>