@model SVTrade.Models.Login

@{Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Авторизація";}


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="container container-body">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form role="form">
                    <fieldset>
                        <h2>Авторизація</h2>

                        <div class="form-group">
                            <div class="text-danger">@ViewBag.Message</div>
                            @Html.TextBoxFor(model => model.email, new { @class = "form-control input-lg", @id = "email", @placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.password, new { @type = "password", @class = "form-control input-lg", @id = "password", @placeholder = "Пароль" })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                        <span class="checkbox-success">
                            @Html.EditorFor(model => model.RememberMe, new { @type = "checkbox", @name = "remember_me", @class = "checkbox-success" })
                            <span data-color="info">Запам’ятати?</span>
                        </span>
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <input type="submit" class="btn btn-lg btn-success btn-block" value="Увійти">
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <a href="@Url.Action("Register", "UserRegistration")" class="btn btn-lg btn-primary btn-block">Реєстрація</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>


    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
