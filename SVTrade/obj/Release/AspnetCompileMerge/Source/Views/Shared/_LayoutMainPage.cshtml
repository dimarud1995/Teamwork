<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link runat="server" rel="icon" href="~/Content/img/icow.jpg" type="image/jpg" />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic,greek-ext,cyrillic-ext' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="~/Content/font-awesome/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/animate.min.css" type="text/css">
    <link rel="stylesheet" href="~/Content/css/MainPage.css" type="text/css">
    <link rel="stylesheet" href="~/Content/stylePersonal.css" type="text/css">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav id="mainNav" class="navbar navbar-fixed-top navbar-default ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">СВ Трейд Холод</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Трейд Холод", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-left">
                    @Html.Partial("_AccessPartial")
                </ul>
                @{
                    if (Request.IsAuthenticated)
                    {
                        using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                        {
                            @Html.AntiForgeryToken()
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="#">Вітаємо @SVTrade.LoggedUserInfo.GetName(Convert.ToInt32(HttpContext.Current.Request.Cookies["name"].Value))</a></li>
                                <li><a href="javascript:document.getElementById('logoutForm').submit()">Вийти</a></li>
                            </ul>
                        }
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Реєстрація", "Register", "UserRegistration", routeValues: null, htmlAttributes: new { title = "" })</li>
                            <li> @Html.ActionLink("Увійти", "Login", "Account") </li>
                        </ul>
                    }
                }
            </div>

        </div>
    </nav>
    @RenderBody()

    <section class="panel-footer navbar-fixed-bottom bg-blue">
        <div class="bottom-bar">
            <div class="container">
                <small class="copyright">Телефон: +38 (093) 00 77 167 @@ 2015</small>
            </div><!--//container-->
        </div><!--//bottom-bar-->
    </section><!--//footer-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Content/dist/js/jquery.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>