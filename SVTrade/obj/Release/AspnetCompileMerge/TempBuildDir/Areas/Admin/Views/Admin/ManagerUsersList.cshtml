@model IEnumerable<SVTrade.Models.User>

@{
    ViewBag.Title = "Админ: все пользователи";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-panel">

    <table class="table table-hover table-advance table-hover">
        <h4><i class="fa fa-angle-right"></i> Все пользователи</h4>
        <tr>
            <th>
                <i class="fa fa-bullhorn"></i>
                Компания
            </th>

            <th>
                Контакты
            </th>

            <th>
                Адресса
            </th>

            <th>
                @Html.DisplayNameFor(model => model.userGroupID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.merchantLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tradeLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.approved)
            </th>

            <th><i class="fa fa-edit"></i></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div>
                        @Html.DisplayFor(model => item.post)
                        <strong>@Html.DisplayFor(model => item.companyName)</strong>
                    </div>
                    <div>
                        @Html.DisplayFor(model => item.contactPerson)
                    </div>
                </td>
                <td>
                    <ul class="list-unstyled">
                        <li>@Html.DisplayFor(model => item.email)</li>
                        <li>@Html.DisplayFor(model => item.phoneNumber)</li>
                    </ul>
                </td>
                <td>
                    <ul class="list-unstyled">
                        <li>@Html.DisplayFor(model => item.juridicalAddress)</li>
                        <li>@Html.DisplayFor(model => item.address)</li>
                    </ul>
                </td>
                <td>@Html.DisplayFor(model => item.UserGroup.name)</td>
                <td>@Html.DisplayFor(model => item.merchantLicense)</td>
                <td>@Html.DisplayFor(model => item.tradeLicense)</td>
                <td>@Html.DisplayFor(model => item.approved)</td>
                <td>
                    <!-- Confirm -->
                    @using (Html.BeginForm("UserApproved", "Admin"))
                    {
                        @Html.Hidden("userID", item.userID)
                        <div class="btn-group" role="group">
                            <button type="submit" class="btn btn-success btn-xs"><i class="fa fa-check"></i></button>
                        </div>
                    }
                    <!-- Edit -->
                    <a href="@Url.Action("EditUser", "Admin" , new { item.userID } )" class="btn btn-primary btn-xs">
                        <i class="fa fa-pencil"></i>
                    </a>
                    <!-- Delete -->
                    @using (Html.BeginForm("DeleteUser", "Admin"))
                    {
                        @Html.Hidden("userID", item.userID)
                        <button type="submit" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                    }
                    <!-- SMS -->
                    <button type="submit" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#myModal"><i class="fa fa-envelope-o"></i></button>
                    @Html.Action("SendSMS", "Admin")
                </td>
            </tr>
        }
    </table>

</div>
