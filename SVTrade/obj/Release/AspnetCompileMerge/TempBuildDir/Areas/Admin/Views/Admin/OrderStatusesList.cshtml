@model IEnumerable<SVTrade.Models.OrderStatus>

@{
    ViewBag.Title = "Адмін: стан замовлень";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Можливі стани замовлень</h2>


<p>
    <a href="/Admin/Admin/CreateOrderStatus" class="btn btn-default">Додати новий стан замовлення</a>
</p>

<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(model => item.name)
            </td>
            <td>
                @using (Html.BeginForm("DeleteOrderStatus", "Admin"))
                {
                    @Html.Hidden("statusID", item.statusID)
                    <input type="submit" value="Видалити" class="btn btn-danger marg5" />
                }

                @Html.ActionLink("Змінити", "EditOrderStatus", "Admin", new { item.statusID }, new { @class = "btn btn-info marg5" })

            </td>
        </tr>
    }
</table>